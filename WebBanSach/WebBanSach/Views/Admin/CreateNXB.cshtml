@model WebBanSach.Models.NXB

@{
    ViewBag.Title = "CreateNXB";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÊM NHÀ XUẤT BẢN</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên nhà xuất bản</label>
            <div class="col-md-10">
                <input class="form-control" type="text" name="TenNXB" />
                <p class="text-danger">@ViewData["ErNXB"]</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("<< Trở về", "NXBSach")
</div>
