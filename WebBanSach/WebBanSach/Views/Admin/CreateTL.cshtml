@model WebBanSach.Models.THELOAI

@{
    ViewBag.Title = "CreateTL";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÊM THỂ LOẠI</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên thể loại</label>
            <div class="col-md-10">
                <input class="form-control" type="text" name="TenTL" />
                <p class="text-danger">@ViewData["ErTL"]</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("<< Trở về", "TheLoaiSach")
</div>
