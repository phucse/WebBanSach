@model WebBanSach.Models.SACH

@{
    ViewBag.Title = "DeleteBook";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>XÁC NHẬN XOÁ SÁCH</h2>

<h3>Bạn có chắc có muốn xoá cuốn sách này ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sách
        </dt>

        <dd>
            @Model.TenSach
        </dd>

        <dt>
            Mô tả
        </dt>

        <dd>
            @Model.MoTa
        </dd>

        <dt>
            Ảnh bìa
        </dt>

        <dd>
            <img src="~/Images/@Model.AnhBia" style="width: 115px; height:170px" alt="image" />
        </dd>

        <dt>
            Ngày cập nhật
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", @Model.NgayUpdate)
        </dd>

        <dt>
            Số lượng
        </dt>

        <dd>
            @Model.Soluong
        </dd>

        <dt>
            Giá bán
        </dt>

        <dd>
            @String.Format("{0:0,000}", @Model.GiaBan) VNĐ
        </dd>

        <dt>
            Giá ship nội thành
        </dt>

        <dd>
            @String.Format("{0:0,000}", @Model.ShipNoiThanh) VNĐ
        </dd>

        <dt>
            Giá ship tỉnh
        </dt>

        <dd>
            @String.Format("{0:0,000}", @Model.ShipTinh) VNĐ
        </dd>

        <dt>
            Tác giả
        </dt>

        <dd>
            @Model.TacGia
        </dd>

        <dt>
            Nhà xuất bản
        </dt>

        <dd>
            @Model.NXB.TenNXB
        </dd>

        <dt>
            Thể loại
        </dt>

        <dd>
            @Model.THELOAI.TenTL
        </dd>

        <dt>
            Người bán
        </dt>

        <dd>
            @Model.NGUOIBAN.HoTenNB
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xoá sách" class="btn btn-default" /> |<br />
            @Html.ActionLink("<< Trở về", "Sach")
        </div>
    }
</div>
