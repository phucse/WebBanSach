@using WebBanSach.Models;

@{
    ViewBag.Title = "TTCN";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1>Thông tin cá nhân</h1>

<table align="center">
    @using (Html.BeginForm("TTCN", "User", new { id = Session["id"] }))
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ tên: </td>
            <td>
                <input type="text" name="hoten" value="@Model.HoTen" />
                @ViewData["loiHT"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Tài khoản: </td>
            <td>
                @Model.TaiKhoan
            </td>
        </tr>
        <tr style="height:40px">
            <td>Email: </td>
            <td>
                <input type="email" name="email" value="@Model.Email" />
                @ViewData["loiE"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Địa chỉ: </td>
            <td>
                <input type="text" name="diachi" value="@Model.DiaChi" />
                @ViewData["loiDC"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Điện thoại: </td>
            <td>
                <input type="text" name="dienthoai" value="@Model.DienThoai" />
                @ViewData["loiDT"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Ngày sinh: </td>
            <td>
                <input type="date" name="ngaysinh" value="@Model.NgaySinh" />
                @ViewData["loiNS"]
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="CẬP NHẬT" />
                @ViewData["mess"]
            </td>
        </tr>

    }

</table>

