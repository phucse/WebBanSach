@model IEnumerable<WebBanSach.Models.CTDH>

@{
    ViewBag.Title = "ChiTietDH";
    Layout = "~/Views/Shared/_LayoutSeller.cshtml";
}

<h2>CHI TIẾT ĐƠN HÀNG</h2>

<table class="table">
    <tr>
        <th>
            Mã đơn hàng
        </th>
        <th>
            Tên sách
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaDH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SACH.TenSach)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuong)
        </td>
        <td>
            @String.Format("{0:0,0}", @item.DonGia) VNĐ
        </td>
    </tr>
}

</table>
